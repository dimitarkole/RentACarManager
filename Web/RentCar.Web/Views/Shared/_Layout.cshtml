@using RentCar.Common
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@this.ViewData["Title"] - @GlobalConstants.SystemName</title>
     <meta charset="utf-8">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <title>Dashboard V.1 | Kiaalap - Kiaalap Admin Template</title>
    <meta name="description" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- favicon
		============================================ -->
    <link rel="shortcut icon" type="image/x-icon" href="img/favicon.ico">
    <!-- Google Fonts
		============================================ -->
    <link href="https://fonts.googleapis.com/css?family=Roboto:100,300,400,700,900" rel="stylesheet">
    <!-- Bootstrap CSS
		============================================ -->
    <link href="~/">
    <link rel="stylesheet" href="~/css/bootstrap.min.css">
    <!-- Bootstrap CSS
		============================================ -->
    <link rel="stylesheet" href="~/css/font-awesome.min.css">
    <!-- owl.carousel CSS
		============================================ -->
    <link rel="stylesheet" href="~/css/owl.carousel.css">
    <link rel="stylesheet" href="~/css/owl.theme.css">
    <link rel="stylesheet" href="~/css/owl.transitions.css">
    <!-- animate CSS
		============================================ -->
    <link rel="stylesheet" href="~/animate.css">
    <!-- normalize CSS
		============================================ -->
    <link rel="stylesheet" href="~/css/normalize.css">
    <!-- meanmenu icon CSS
		============================================ -->
    <link rel="stylesheet" href="~/css/meanmenu.min.css">
    <!-- main CSS
		============================================ -->
    <link rel="stylesheet" href="~/main.css">
    <!-- educate icon CSS
		============================================ -->
    <link rel="stylesheet" href="~/educate-custon-icon.css">
    <!-- morrisjs CSS
		============================================ -->
    <link rel="stylesheet" href="~/morrisjs/morris.css">
    <!-- mCustomScrollbar CSS
		============================================ -->
    <link rel="stylesheet" href="~/scrollbar/jquery.mCustomScrollbar.min.css">
    <!-- metisMenu CSS
		============================================ -->
    <link rel="stylesheet" href="~/metisMenu/metisMenu.min.css">
    <link rel="stylesheet" href="~/metisMenu/metisMenu-vertical.css">
    <!-- calendar CSS
		============================================ -->
    <link rel="stylesheet" href="~/calendar/fullcalendar.min.css">
    <link rel="stylesheet" href="~/calendar/fullcalendar.print.min.css">
    <!-- style CSS
		============================================ -->
    <link rel="stylesheet" href="~/style.css">
    <!-- responsive CSS
		============================================ -->
    <link rel="stylesheet" href="~/responsive.css">
    <!-- modernizr JS
		============================================ -->
    <script src="~/js/vendor/modernizr-2.8.3.min.js"></script>
</head>
<body>
    <div class="all-content-wrapper">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <div class="logo-pro">
                        <a href="index.html"><img class="main-logo" src="img/logo/logo.png" alt="" />RentCar</a>
                    </div>
                </div>
            </div>
        </div>
          <div class="header-advance-area">
            <div class="header-top-area">
                <div class="container">
                    <div class="row">
                        <div class="col-lg-1 col-md-0 col-sm-1 col-xs-12">
                            <div class="menu-switcher-pro">
                                <button type="button" id="sidebarCollapse" class="btn bar-button-pro header-drl-controller-btn btn-info navbar-btn">
										<i class="educate-icon educate-nav"></i>
									</button>
                            </div>
                        </div>
                        <div class="col-lg-7 col-md-7 col-sm-6 col-xs-12">
                            @if(this.SignInManager.IsSignedIn(this.User))                            {
                                 <div class="header-top-menu tabl-d-n">
                                    <ul class="nav navbar-nav mai-top-nav">
                                        <li class="nav-item">
                                          <a asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                                        </li>
                                    </ul>
                                </div>
                               @if (this.User.IsInRole(GlobalConstants.Roles.Administrator))
						       {                                    <div class="header-top-menu tabl-d-n">
                                        <ul class="nav navbar-nav mai-top-nav">
                                            <li class="nav-item">
                                                <a asp-area="@AdministrationArea" asp-controller="Car" asp-action="Create">Create Car</a>
                                            </li>
                                        </ul>
                                    </div>
                                    <div class="header-top-menu tabl-d-n">
                                        <ul class="nav navbar-nav mai-top-nav">
                                            <li class="nav-item">
                                                <a asp-area="@AdministrationArea" asp-controller="User" asp-action="All">Users</a>
                                            </li>
                                        </ul>
                                    </div>
                                      <div class="header-top-menu tabl-d-n">
                                        <ul class="nav navbar-nav mai-top-nav">
                                            <li class="nav-item">
                                                <a asp-area="@AdministrationArea" asp-controller="RentCar" asp-action="Index">Rented Car</a>
                                            </li>
                                        </ul>
                                    </div>
                               }                               
                               }
                        </div>
                        <div class="col-lg-4">
                            <div class="header-top-menu tabl-d-n">
                                <ul class="nav navbar-nav mai-top-nav">
                                    <partial name="_LoginPartial" />
                                    </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Mobile Menu end -->
            <div class="breadcome-area">
                <div class="container">
                    <br />
                    <br />
                    <br />
                    @this.RenderBody()

                </div>
            </div>
        </div>
        </div>
    <br />
                    <br />
                    <br />
        <div class="footer-copyright-area">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="footer-copy-right">
                            <p>Copyright © @DateTime.Now.Year - @GlobalConstants.SystemName. All rights reserved.  - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a></p>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    <script src="~/lib/jquery/dist/jquery.min.js" asp-append-version="true"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js" asp-append-version="true"></script>
    <script src="~/lib/jquery-validation-unobtrusive/dist/jquery.validate.unobtrusive.min.js" asp-append-version="true"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.min.js" asp-append-version="true"></script>
    <script src="~/js/site.min.js" asp-append-version="true"></script>
    @await this.RenderSectionAsync("Scripts", required: false)
</body>
</html>
