@model CarDetailsModel
@{
    ViewData["Title"] = "Delete car";
}

<h1 class="text-white">@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-3"></div>

    <div class="col-md-6">
        <form method="post">
           <div class="col-md-5">
        <img src="@Model.ImageUrl" />
        
    </div>

    <div class="col-md-6">
        <h2>@Model.Brand - @Model.Model</h2>
        <small>@Model.Made</small>
        <div>
            Count Passagers: @Model.CountPassagers
         </div>
              <div>
            Price: @Model.Price
         </div>
         <div>Desctiption:</div>

         <div>
            @Model.Desctiption
        </div>
    </div>
            <button type="submit" class="btn btn-primary">Delete</button>

        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
