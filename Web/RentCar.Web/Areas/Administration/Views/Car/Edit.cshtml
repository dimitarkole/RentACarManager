@model CarEditInputModel
@{
    ViewData["Title"] = "Edit car";
}

<h1 class="text-white">@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-3"></div>

    <div class="col-md-6">
        <form method="post">
            <div asp-validation-summary="All" class="text-warning"></div>
            <div class="d-flex justify-content-between">
                <div class="form-group w-50 mr-2">
                    <label asp-for="Brand"></label>
                    <input asp-for="Brand" class="form-control" />
                    <span asp-validation-for="Brand" class="text-warning"></span>
                </div>
                <div class="form-group w-50 ml-2">
                    <label asp-for="Model"></label>
                    <input asp-for="Model" class="form-control" />
                    <span asp-validation-for="Model" class="text-warning"></span>
                </div>
                 <div class="form-group w-50 ml-2">
                    <label asp-for="ImageUrl"></label>
                    <input asp-for="ImageUrl" class="form-control" />
                    <span asp-validation-for="ImageUrl" class="text-warning"></span>
                </div>
                  <div class="form-group w-50 ml-2">
                    <label asp-for="Made"></label>
                    <input asp-for="Made" class="form-control" />
                    <span asp-validation-for="Made" class="text-warning"></span>
                </div>
                  <div class="form-group w-50 ml-2">
                    <label asp-for="CountPassagers"></label>
                    <input asp-for="CountPassagers" class="form-control" />
                    <span asp-validation-for="CountPassagers" class="text-warning"></span>
                </div>
                 <div class="form-group w-50 ml-2">
                    <label asp-for="Desctiption"></label>
                    <textarea asp-for="Desctiption" class="form-control" rows="6"></textarea>
                    <span asp-validation-for="Desctiption" class="text-warning"></span>
                </div>
                <div class="form-group w-50 ml-2">
                    <label asp-for="Price"></label>
                    <input asp-for="Price" class="form-control" />
                    <span asp-validation-for="Price" class="text-warning"></span>
                </div>
            </div>
            <button type="submit" class="btn btn-primary">Edit</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
